<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amber Grape Farm</title>
    
    <!-- Bootstrap5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Poppins&display=swap" rel="stylesheet">
    <!-- Font Awesome (ICON) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
<%- include('./partials/navbar')%>

<section class="py-5">
  <div class="container">
    <div class="row gx-5">
      <aside class="col-lg-6">
        <% if (product && product.images && product.images.length > 0) { %>
          <div id="mainImage" class="border rounded-4 mb-3 d-flex justify-content-center">
            <a id="mainImageLink" data-fslightbox="mygallery" class="rounded-4" data-type="image" href="<%= product.images[0] %>">
              <img id="mainImageSrc" class="mainImage" style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="<%= product.images[0] %>" />
            </a>              
          </div>
          <div class="d-flex justify-content-center mb-3">
              <% product.images.forEach((image, index) => { %>
                <a id="subImage" data-fslightbox="mygallery" class="border mx-1 rounded-2" target="_blank" data-type="image" href="#" class="item-thumb" onclick="changeMainImage('<%= image %>'); return false;">
                  <img width="60" height="60" class="subImage rounded-2" src="<%= image %>" />
              </a>                
              <% }) %>
          </div>
      <% } %>        
    </aside>
      
    <script>
    function changeMainImage(imageSrc) {
      document.getElementById('mainImageLink').setAttribute('href', imageSrc);
      document.getElementById('mainImageSrc').setAttribute('src', imageSrc);
    }
    </script>
      
      
      </aside>
      <main class="col-lg-6">
        <div class="ps-lg-3">
          <h4 class="title text-dark">
            <%= product.productName %>
          </h4>
        
          <div class="d-flex flex-row my-3">
            <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i> orders</span>
            <% if (product.stockQuantity > 0) {%>
            <span class="text-success ms-2">มีสินค้าอยู่</span>
            <% } else { %>
            <span class="text-danger ms-2">สินค้าหมด</span>
            <% } %>
          </div>

          <div class="mb-3">
            <span class="h5">฿ <span id="productPrice"><%= product.sizes[0].price %></span></span>
          </div>

          <form action="/cart/add-to-cart/<%= product.id %>" method="POST">
            <input type="hidden" name="productId" value="<%= product.id %>">
            <div class="row mb-4">
              <div class="col-md-4 col-6">
                <label class="mb-2">ขนาด/ไซส์:</label>
                <select name="size" class="form-select border border-secondary" style="height: 35px;" onchange="updatePrice(this)">
                  <% product.sizes.forEach(function(sizeObj) { %>
                    <option value="<%= sizeObj.size %>" data-price="<%= sizeObj.price %>"><%= sizeObj.size %></option>
                  <% }); %>
                </select>
              </div>            
              <!-- col.// -->
              <div class="col-md-4 col-6 mb-3">
                <label class="mb-2 d-block">จำนวนสินค้าที่ต้องการซื้อ: </label>
                <div class="input-group mb-3" style="width: 170px;">
                  <button class="btn btn-white border border-secondary px-3" type="button" id="button-minus" data-mdb-ripple-color="dark">
                    <i class="fas fa-minus"></i>
                  </button>
                  <input id="productQuantity" name="quantity" type="text" class="form-control text-center border border-secondary" value="1" aria-label="Example text with button addon" aria-describedby="button-addon1" />
                  <button class="btn btn-white border border-secondary px-3" type="button" id="button-plus" data-mdb-ripple-color="dark">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-warning shadow-0">เพิ่มเข้าตะกร้า</button>
          </form>
        </div>
        <hr />
        <div class="accordion" id="accordionPanelsStayOpenExample">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                รายละเอียด
              </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
              <div class="accordion-body">
                <p><%- product.description %></p>
              </div>
            </div>
          </div>
      </main>
    </div>

  </div>
</section>

<script>
  function updatePrice(selectElement) {
    const selectedOption = selectElement.options[selectElement.selectedIndex];
    const price = selectedOption.getAttribute('data-price');
    document.getElementById('productPrice').innerText = price;
  }

  document.getElementById('button-minus').addEventListener('click', function() {
    let quantity = parseInt(document.getElementById('productQuantity').value);
    if (quantity > 1) {
      document.getElementById('productQuantity').value = quantity - 1;
    }
  });

  document.getElementById('button-plus').addEventListener('click', function() {
    let quantity = parseInt(document.getElementById('productQuantity').value);
    let maxQuantity = <%= product.stockQuantity %>;
    if (quantity < maxQuantity) {
      document.getElementById('productQuantity').value = quantity + 1;
    }
  });

  document.getElementById('productQuantity').addEventListener('input', function() {
    let quantity = parseInt(this.value);
    let maxQuantity = <%= product.stockQuantity %>;
    if (quantity > maxQuantity) {
      this.value = maxQuantity;
    } else if (quantity < 1 || isNaN(quantity)) {
      this.value = 1;
    }
  });

  document.getElementById('productQuantity').addEventListener('blur', function() {
    let quantity = parseInt(this.value);
    let maxQuantity = <%= product.stockQuantity %>;
    if (quantity > maxQuantity) {
      this.value = maxQuantity;
    } else if (quantity < 1 || isNaN(quantity)) {
      this.value = 1;
    }
  });
</script>


<%- include('./partials/footer')%>

</body>
</html>
