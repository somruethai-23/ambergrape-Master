<section class="py-5">
    <div class="container">
        <% if (error && error.length) { %>
            <div class="alert alert-danger d-flex justify-content-between align-items-center">
                <%= error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <% if (success && success.length) { %>
            <div class="alert alert-success d-flex justify-content-between align-items-center">
                <%= success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">ติดต่อเรา</h2>
                <form method="POST" action="/send-email">
                    <div class="mb-3">
                        <label for="name" class="form-label">ชื่อนามสกุล</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="ใส่ชื่อเต็ม...." required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">อีเมล</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="ใส่อีเมลของท่าน...." required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">ข้อความ</label>
                        <textarea class="form-control" id="message" name="message" rows="5" placeholder="ใส่ข้อความ...." required></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-block">ส่ง</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>