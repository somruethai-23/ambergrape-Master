<section class="bg-light p-3 p-md-4 p-xl-5">
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
              <div class="card border border-light-subtle rounded-4">
                  <div class="card-body p-3 p-md-4 p-xl-5">
                      <div class="row">
                          <div class="col-12">
                              <div class="mb-5">
                                  <div class="text-center mb-4">
                                      <a href="#!">
                                          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRc5_Vk8SIISL6OWGBF_SXC7On-TvnkfqWGHuIWJqnESg&s" alt="BootstrapBrain Logo" width="100" height="100">
                                      </a>
                                  </div>
                                  <h4 class="text-center">เข้าสู่ระบบ</h4>
                              </div>
                              <% if (error && error.length) { %>
                                <div class="alert alert-danger d-flex justify-content-between align-items-center">
                                    <%= error[0] %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            <% } %>
                            <% if (success && success.length) { %>
                                <div class="alert alert-success d-flex justify-content-between align-items-center">
                                    <%= success[0] %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            <% } %>
                          </div>
                          <!-- Form for traditional login -->
                          <form method="POST" action="/auth/login">
                              <div class="row gy-3 overflow-hidden">
                                  <div class="col-12">
                                      <div class="form-floating mb-3">
                                          <input type="text" class="form-control" name="username" id="username" value="" placeholder="Username" required>
                                          <label for="username" class="form-label">ชื่อผู้ใช้</label>
                                      </div>
                                  </div>
                                  <div class="col-12">
                                      <div class="form-floating mb-3">
                                          <input type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                          <label for="password" class="form-label">รหัสผ่าน</label>
                                      </div>
                                  </div>
                                  <div class="col-12">
                                      <div class="d-grid">
                                          <button class="btn bsb-btn-xl btn-dark" type="submit">เข้าสู่ระบบ</button>
                                      </div>
                                  </div>
                              </div>
                          </form>
                          <!-- Google Login Button -->
                          <div class="row mt-4">
                              <div class="col-12 text-center">
                                  <a href="/auth/google" class="btn btn-danger">
                                      <i class="fab fa-google"></i> Login with Google
                                  </a>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-12">
                                  <hr class="mt-5 mb-4 border-secondary-subtle">
                                  <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                      <p>ยังไม่ได้เป็นสมาชิก?</p>
                                      <a href="/auth/register" class="link-secondary text-decoration-none">สมัครสมาชิก</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>