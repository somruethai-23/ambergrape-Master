<div class="container-xl px-4 mt-4">
    <%- include('../partials/flash') %>
    <hr class="mt-0 mb-4">
    <div class="row">
        <%- include('../partials/sidebarUser') %>
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">รายละเอียดส่วนตัว</div>
                <div class="card-body">
                    <% if (addresses.length === 0) { %>
                        <!-- ไม่มีที่อยู่ -->
                        <a href="/user/profile-edit/<%= user._id %>" class="btn btn-outline-dark filter-btn">เพิ่มที่อยู่</a>
                    <% } else { %>
                        <!-- มีที่อยู่ -->
                        <ul class="list-group mb-3">
                            <% addresses.forEach(function(address) { %>
                                <li class="list-group-item">
                                    <strong>ชื่อ:</strong> <%= address.firstname %> <%= address.lastname %><br>
                                    <strong>ที่อยู่:</strong> <%= address.address %>, <%= address.city %>, <%= address.postalCode %><br>
                                    <strong>เบอร์โทร:</strong> <%= address.phone %><br>
                                </li>
                            <% }); %>
                        </ul>
                        <a href="/user/profile-edit/<%= user._id %>" class="btn btn-dark">แก้ไขที่อยู่</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
