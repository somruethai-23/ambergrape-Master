<div class="container mt-5">
    <% if (error && error.length) { %>
        <div class="alert alert-danger d-flex justify-content-between align-items-center">
            <%= error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (success && success.length) { %>
        <div class="alert alert-success d-flex justify-content-between align-items-center">
            <%= success[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <div class="row mb-3">
        <div class="col">
            <a href="/admin/categories" class="btn btn-primary">เพิ่มหมวดหมู่</a>
            <a href="/admin/add-product" class="btn btn-primary">เพิ่มสินค้า</a>
            <form action="/admin/delete-all-products" method="POST">
                <button type="submit" class="btn btn-danger">ลบสินค้าทั้งหมด</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <% if (products.length === 0) { %>
                <p class="text-center">ไม่มีสินค้า</p>
            <% } else { %>
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>รหัสสินค้า</th>
                            <th>หมวดหมู่</th>
                            <th>จำนวนสต็อก</th>
                            <th>สถานะ</th>
                            <th>แก้ไข</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="<%= product.image %>" alt="<%= product.productName %>" class="rounded-circle me-2" style="width: 45px; height: 45px;">
                                    <div>
                                        <p class="fw-bold mb-0"><%= product.productName %></p>
                                        <p class="text-muted mb-0"><%= product._id %></p>
                                    </div>
                                </div>
                            </td>
                            <td><%= product.category.categoryName %> </td>
                            <td><%= product.stockQuantity %></td>
                            <td>
                                <% if(product.status === "พร้อมขาย") { %>
                                <span class="badge bg-success">ใช้งานอยู่</span>
                                <% } else if (product.status === "ไม่พร้อมขาย") { %>
                                <span class="badge bg-warning">ไม่พร้อมขาย</span>
                                <% } else { %>
                                <span class="badge bg-danger">เลิกขาย</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/admin/edit-product/<%= product._id %>" class="btn btn-link">แก้ไข</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</div>
